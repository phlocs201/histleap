<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:padding="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/logo_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_white"
            android:scaleX="0.4"
            android:scaleY="0.4"
            />
        <TableLayout
            android:layout_marginStart="15dp"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:id="@+id/header_text_table1"
            >
            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/header_text_table_cell1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="13sp"/>
                </TableRow>
            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/header_text_table_cell4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="13sp"/>
            </TableRow>
        </TableLayout>
        <TextView
            android:id="@+id/header_text_table_cell2"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="24sp"/>
        <TableLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:id="@+id/header_text_table2">
            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/header_text_table_cell3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="13sp"/>
            </TableRow>
            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/header_text_table_cell6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="13sp"/>
            </TableRow>
        </TableLayout>
        <ImageButton
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_style_setting"
            android:background="@color/colorPrimary"
            android:elevation="0dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:onClick="btn_settingOnClick"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginBottom="54dp"
        >
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="tech.phlocs.histleap.MapsActivity"
        />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/slider_area"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="#C09E9E9E"
        android:layout_above="@+id/footer_main"
        android:visibility="visible">

        <ImageView
            android:id="@+id/slider_bar_white"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/slider_bar_white" />

        <GridView
            android:id="@+id/slider_points"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:numColumns="auto_fit"
            android:columnWidth="40dp"
            android:stretchMode="columnWidth"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/footer_main"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/logo_type"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logotype_white"
            android:scaleX="0.55"
            android:scaleY="0.55" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/logo_type"
            android:layout_marginEnd="8dp"
            android:background="@color/colorPrimary"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:src="@drawable/btn_style_slider"
            android:onClick="onClickToggleSlider"
            />
    </RelativeLayout>


</RelativeLayout>
